= bs_horizontal_simple_form_for @event, url: url_for(action: @event.new_record? ? "create" : "update", controller: "events") do |f|
  .form-inputs
    = f.input :title
    = f.input :description
    = f.input :location
    = f.input :start
    = f.input :finish
  .center
    = f.button :submit, value: ( @event.new_record? ? 'Create' : 'Save' ),   class: 'btn-primary'
